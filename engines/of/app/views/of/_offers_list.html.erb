<ul class="offers_list">
  <% offers.each do |offer| %>
      <li class="o_<%=offer.id%>">
         <h5><%= link_to offer.title, p_make_offer_url.call(offer), title: offer.title %> </h5>
        <%= render_image_link_lazy({
                                       :alt_image => offer.title,
                                       :image => offer.cover_url('thumb_lg'),
                                       :a_href => p_make_offer_url.call(offer),
                                       :a_rel => 'nofollow'
                                   })%>
      </li>
  <% end %>
</ul>